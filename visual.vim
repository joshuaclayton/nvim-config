set encoding=utf-8
" Softtabs, 2 spaces
set tabstop=2
set shiftwidth=2
set expandtab
set laststatus=2

set list listchars=tab:»·,trail:·
set ruler         " show the cursor position all the time
set showcmd       " display incomplete commands
set scrolloff=3

" Numbers
set number
set numberwidth=5

" Words
set gdefault
set shiftround
set nowrap
